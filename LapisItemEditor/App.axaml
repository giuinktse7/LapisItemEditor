             xmlns:local="using:LapisItemEditor"
             x:Class="LapisItemEditor.App"
             >
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <StyleInclude Source="avares://Avalonia.Themes.Fluent/FluentDark.xaml"/>
        <StyleInclude Source="avares://LapisItemEditor/Icons.axaml" />
        <StyleInclude Source="avares://LapisItemEditor/DefaultStyle.axaml" />
        <StyleInclude Source="avares://LapisItemEditor/Controls/NumberInput.axaml"/>
        <StyleInclude Source="avares://LapisItemEditor/Controls/TibiaColorPicker.axaml"/>
    </Application.Styles>
</Application>